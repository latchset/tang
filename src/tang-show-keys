set -e

if [ $# -gt 1 ]; then
    echo "Usage: $0 [<port>]" >&2
    exit 1
fi

port=${1-80}

adv=$(curl -sSf "localhost:$port/adv")

THP_DEFAULT_HASH=S256    # SHA-256.
jose fmt --json "${adv}" -g payload -y -o- \
    | jose jwk use -i- -r -u verify -o- \
    | jose jwk thp -i- -a "${THP_DEFAULT_HASH}"
